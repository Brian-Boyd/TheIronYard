<h1>Home Page of Blog</h1>

<%= link_to "New Post", new_post_path %>

<ul>
  <% @posts_on_blog.each do |post| %>
    <li>
      <%= post.title %>
      <%= post.content %>
      
      <%= link_to "Show", post_path(post) %>
      |
      <%= link_to "Edit", edit_post_path(post) %>
      |
      <%= link_to "Delete", post_path(post), method: :delete %>
    </li>  
  <% end %>
</ul>