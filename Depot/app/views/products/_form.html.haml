= form_for @product, html: {role: "form", class: "form-horizontal"} do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg


  .form-group
    .field
      = f.label :title, class: "col-sm-2"
      = f.text_field :title, class: "col-sm-10"
  .form-group
    .field
      = f.label :description, class: "col-sm-2"
      = f.text_area :description, rows: 6, class: "col-sm-10"
  .form-group
    .field
      = f.label :image_url, class: "col-sm-2"
      = f.text_field :image_url, class: "col-sm-10"
  .form-group
    .field
      = f.label :price, class: "col-sm-2"
      = f.text_field :price, class: "col-sm-10"
  .form-group
    .actions
      = f.submit 'Save', class: "col-sm-offset-2"
