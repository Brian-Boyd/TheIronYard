<form role="form" action="create_post" method="post">
  <fieldset>
    <legend>Create Post</legend>
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="title" name="post[title]">
    </div>
    <div class="form-group">
      <label for="post-content">Post content</label>
      <textarea class="col-xs-12" id="post-content" name="post[content]" rows="7"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary pull-right">Create Post</button>
    </div>
  </fieldset>
</form>
